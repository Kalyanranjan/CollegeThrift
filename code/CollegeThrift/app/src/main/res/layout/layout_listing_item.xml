<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/vlh_listing_thumbnail"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vlh_listing_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/vlh_listing_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/vlh_listing_title"
                    android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vlh_listing_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        android:padding="3dp"
                        android:text="Sale"
                        android:textColor="@color/cardview_light_background"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/vlh_listing_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_light"
                        android:padding="3dp"
                        android:text="$100"
                        android:textColor="@color/cardview_light_background"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/vlh_listing_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_blue_dark"
                        android:padding="3dp"
                        android:text="Trade"
                        android:textColor="@color/cardview_light_background"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/vlh_listing_giveaway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_green_dark"
                        android:padding="3dp"
                        android:text="Giveaway"
                        android:textColor="@color/cardview_light_background"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/vlh_listing_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_red_dark"
                        android:padding="3dp"
                        android:text="SAMPLE TEXT"
                        android:textColor="@color/grey_100" />
                </LinearLayout>
            </LinearLayout>


        <LinearLayout
            android:id="@+id/vlh_edit_favorite"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/edit_listing_background">

            <ImageView
                android:id="@+id/vlh_edit_favorite_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
